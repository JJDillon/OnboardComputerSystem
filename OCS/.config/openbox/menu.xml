<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal">
			<action name="Execute">
				<execute>urxvt</execute>
			</action>
		</item>
		<item label="Files">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<separator/>
		<menu id="root-menu-81349" label="Apps">
			<item label="OpenCPN">
				<action name="Execute">
					<execute>opencpn</execute>
				</action>
			</item>
			<item label="zyGrib">
				<action name="Execute">
					<execute>~/Apps/zyGrib/zyGrib</execute>
				</action>
			</item>
			<item label="JTides">
				<action name="Execute">
					<execute>java -jar ~/Apps/JTides/JTides.jar</execute>
				</action>
			</item>
			<item label="FoxtrotGPS">
				<action name="Execute">
					<execute>foxtrotgps</execute>
				</action>
			</item>
		    <item label="cmus">
			    <action name="Execute">
				    <execute>urxvt -name cmus -e cmus</execute>
			    </action>
		    </item>
		</menu>
		<menu id="root-menu-2915" label="Games">
			<item label="PiSNES">
				<action name="Execute">
					<execute>sudo ~/Apps/pisnes/snes9x.gui</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-63234" label="Scripts">
			<item label="Take screenshot">
				<action name="Execute">
					<execute>~/Scripts/screenshot.sh</execute>
				</action>
			</item>
			<item label="Take webcam picture">
				<action name="Execute">
					<execute>urxvt -hold -name webcam -e ~/Scripts/webcam.sh</execute>
				</action>
			</item>
			<item label="Update packages">
				<action name="Execute">
					<execute>urxvt -hold -name update -e ~/Scripts/update-packages.sh</execute>
				</action>
			</item>
			<item label="Update firmware">
				<action name="Execute">
					<execute>urxvt -hold -name firmware -e ~/Scripts/update-firmware.sh</execute>
				</action>
			</item>
			<item label="Update server">
				<action name="Execute">
					<execute>urxvt -hold -name update_server -e ~/Scripts/update-server.sh</execute>
				</action>
			</item>
			<item label="Backup files">
				<action name="Execute">
					<execute>urxvt -hold -name backup -e ~/Scripts/backup-full.sh</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-192254" label="Tools">
			<item label="Network monitor">
				<action name="Execute">
					<execute>urxvt -name slurm -e slurm -i wlan0</execute>
				</action>
			</item>
			<item label="Process monitor">
				<action name="Execute">
					<execute>urxvt -name htop -e htop</execute>
				</action>
			</item>
			<item label="Wi-Fi Settings">
				<action name="Execute">
					<execute>urxvt -name wicd-curses -e wicd-curses</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-81114" label="Power">
			<item label="Shutdown">
				<action name="Execute">
					<execute>sudo poweroff</execute>
				</action>
			</item>
			<item label="Reboot">
				<action name="Execute">
					<execute>sudo reboot</execute>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
