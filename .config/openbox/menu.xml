<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal">
			<action name="Execute">
				<execute>x-terminal-emulator</execute>
			</action>
		</item>
		<item label="Text editor">
			<action name="Execute">
				<execute>geany</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'menu' package to work -->
		<item label="Files">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<item label="Music">
			<action name="Execute">
				<execute>terminator -x cmus</execute>
			</action>
		</item>
		<item label="Internet">
			<action name="Execute">
				<execute>epiphany-browser</execute>
			</action>
		</item>
		<item label="Email">
			<action name="Execute">
				<execute>terminator --command='mutt'</execute>
			</action>
		</item>
		<item label="IRC">
			<action name="Execute">
				<execute>terminator --command='irssi -c Rizon'</execute>
			</action>
		</item>
		<separator/>
		<menu id="root-menu-81349" label="Apps">
			<item label="OpenCPN">
				<action name="Execute">
					<execute>opencpn</execute>
				</action>
			</item>
			<item label="FoxtrotGPS">
				<action name="Execute">
					<execute>foxtrotgps</execute>
				</action>
			</item>
			<item label="zyGrib">
				<action name="Execute">
					<execute>~/apps/zyGrib/zyGrib</execute>
				</action>
			</item>
			<item label="JTides">
				<action name="Execute">
					<execute>java -jar ~/apps/JTides/JTides.jar</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-2915" label="Games">
			<item label="SNES">
				<action name="Execute">
					<execute>sudo ~/apps/pisnes/snes9x.gui</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-63234" label="Scripts">
			<item label="Take webcam picture">
				<action name="Execute">
					<execute>terminator --command='~/scripts/webcam.sh &amp;&amp; sleep infinity'</execute>
				</action>
			</item>
			<item label="Update server">
				<action name="Execute">
					<execute>terminator --command='~/scripts/update_server.sh &amp;&amp; sleep infinity'</execute>
				</action>
			</item>
			<item label="Update">
				<action name="Execute">
					<execute>terminator --command='~/scripts/update.sh &amp;&amp; sleep infinity'</execute>
				</action>
			</item>
			<item label="Update firmware">
				<action name="Execute">
					<execute>terminator --command='~/scripts/firmware.sh &amp;&amp; sleep infinity'</execute>
				</action>
			</item>
			<item label="Backup">
				<action name="Execute">
					<execute>terminator --command='~/scripts/backup.sh &amp;&amp; sleep infinity'</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-192254" label="Tools">
			<menu id="client-list-menu"/>
			<item label="Add / Remove Software">
				<action name="Execute">
					<execute>pi-packages</execute>
				</action>
			</item>
			<item label="Network monitor">
				<action name="Execute">
					<execute>terminator --command='slurm -i wlan0'</execute>
				</action>
			</item>
			<item label="Process monitor">
				<action name="Execute">
					<execute>terminator --command='htop'</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-75935" label="Settings">
			<item label="Wi-Fi Settings">
				<action name="Execute">
					<execute>terminator --command='wicd-curses'</execute>
				</action>
			</item>
			<item label="Monitor Settings">
				<action name="Execute">
					<execute>lxrandr</execute>
				</action>
			</item>
			<item label="Mouse and Keyboard Settings">
				<action name="Execute">
					<execute>lxinput</execute>
				</action>
			</item>
			<item label="Customise Look and Feel">
				<action name="Execute">
					<execute>lxappearance</execute>
				</action>
			</item>
			<item label="Tint2 Configuration">
				<action name="Execute">
					<execute>~/apps/tintwizard/tintwizard.py</execute>
				</action>
			</item>
			<item label="Conky Configuration">
				<action name="Execute">
					<execute>geany /etc/conky/conky.conf</execute>
				</action>
			</item>
			<item label="crontab">
				<action name="Execute">
					<execute>terminator --command='crontab -e'</execute>
				</action>
			</item>
			<item label="Openbox Autostart">
				<action name="Execute">
					<execute>geany ~/.config/openbox/autostart</execute>
				</action>
			</item>
			<item label="Openbox Settings File">
				<action name="Execute">
					<execute>geany ~/.config/openbox/rc.xml</execute>
				</action>
			</item>
			<item label="Openbox Menu Editor">
				<action name="Execute">
					<execute>obmenu</execute>
				</action>
			</item>
			<item label="Openbox Configuration Manager">
				<action name="Execute">
					<execute>obconf</execute>
				</action>
			</item>
			<item label="Raspberry Pi Configuration">
				<action name="Execute">
					<execute>sudo rc_gui</execute>
				</action>
			</item>
			<item label="Raspberry Pi Configuration (old)">
				<action name="Execute">
					<execute>terminator --command='sudo raspi-config'</execute>
				</action>
			</item>
			<item label="config.txt">
				<action name="Execute">
					<execute>sudo geany /boot/config.txt</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-483134" label="Rubbish">
			<item label="View">
				<action name="Execute">
					<execute>pcmanfm ~/.local/share/Trash</execute>
				</action>
			</item>
			<item label="Empty">
				<action name="Execute">
					<execute>terminator --command='rm -rf ~/.local/share/Trash/*'</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-81114" label="Power">
			<item label="Logout">
				<action name="Exit"/>
			</item>
			<item label="Reboot">
				<action name="Execute">
					<execute>sudo reboot</execute>
				</action>
			</item>
			<item label="Shutdown">
				<action name="Execute">
					<execute>sudo poweroff</execute>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
